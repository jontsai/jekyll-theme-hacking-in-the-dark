                formconfig: {
                    label: 'This is a "number"-formtype',
                    tooltip: 'enter a number between 0-100'
                }
            },
            floatednumber: {
                formtype: 'number',
                formconfig: {
                    fullselect: true,
                    digits: true,
                    label: 'This is a floated "number"-formtype',
                    tooltip: 'enter here your number'
                }
            },
            password: {
                formtype: 'password',
                formconfig: {
                    placeholder: 'enter password',
                    label: 'This is a "password"-formtype',
