            plain: {
                value: 'Hey all, here is an attribute that can be shown, but not edited',
                formtype: 'plain',
                formconfig: {
                    label: 'This is a "plain"-formtype',
                    placeholder: 'enter text',
                    tooltip: 'enter "here" your text'
