    background: -o-linear-gradient(top,  #56000a 0%,#56000a 7%,#7a021e 50%,#a90329 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #56000a 0%,#56000a 7%,#7a021e 50%,#a90329 100%); /* IE10+ */
    background: linear-gradient(to bottom,  #56000a 0%,#56000a 7%,#7a021e 50%,#a90329 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#56000a', endColorstr='#a90329',GradientType=0 )\9; /* IE6-8 */
